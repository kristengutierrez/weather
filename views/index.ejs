<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Weather</title>
    <link rel="stylesheet" type="text/css" href="/assets/styles/salesforce-lightning-design-system.css" />
  </head>
  <body>
    <div>
      <img src="/images/penweather.jpg" alt="Penrod Weather" class="slds-align_absolute-center">
    <div class="slds-grid slds-gutters" class="slds-m-left_medium">
        <div class="slds-col slds-size_1-of-2">
            Milwaukee
          <div class="slds-m-left_medium">
              <% if(locals.milWeather !== null){ %>
                <p><%= locals.milWeather %></p>
              <% } %>
              <% if(locals.error !== null){ %>
                <p><%= locals.error %></p>
              <% } %>
          </div>
          <div class="slds-m-left_medium">
              <% if(locals.milDesc !== null){ %>
                <p><%= locals.milDesc %></p>
              <% } %>
              <% if(locals.error !== null){ %>
                <p><%= locals.error %></p>
              <% } %>
          </div>
        </div>
        <div class="slds-col slds-size_1-of-2">
          Minneapolis
          <div class="slds-m-left_medium">
              <% if(locals.minWeather !== null){ %>
                <p><%= locals.minWeather %></p>
              <% } %>
              <% if(locals.error !== null){ %>
                <p><%= locals.error %></p>
              <% } %>
          </div>
          <div class="slds-m-left_medium">
              <% if(locals.minDesc !== null){ %>
                <p><%= locals.minDesc %></p>
              <% } %>
              <% if(locals.error !== null){ %>
                <p><%= locals.error %></p>
              <% } %>
          </div>
          </div>
          <div class="slds-col slds-size_1-of-2">

          </div>
    </div>
  </div>
  </body>
</html>