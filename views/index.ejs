<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Weather</title>
    <link rel="stylesheet" type="text/css" href="/assets/styles/salesforce-lightning-design-system.css" />
  </head>
  <body>
    <div>
      <img src="/images/penweather.jpg" alt="Penrod Weather" class="slds-align_absolute-center">
    <div class="slds-grid slds-gutters slds-wrap slds-grid_vertical-align-center">
        <div class="slds-col slds-size_1-of-2 slds-theme_inverse">
            <span style="font-size: 16pt">Milwaukee</span>
          <div class="slds-m-left_medium">
              <% if(locals.milWeather !== null){ %>
                <h3><%= locals.milWeather %></h3>
              <% } %>
              <% if(locals.error !== null){ %>
                <p><%= locals.error %></p>
              <% } %>
          </div>
          <div class="slds-m-left_medium">
              <% if(locals.milDesc !== null){ %>
                <p><%= locals.milDesc %></p>
              <% } %>
              <% if(locals.error !== null){ %>
                <p><%= locals.error %></p>
              <% } %>
          </div>
        </div>
        <div class="slds-col slds-size_1-of-2 slds-theme_alt-inverse">
          <span>Minneapolis</span>
          <div class="slds-m-left_medium">
              <% if(locals.minWeather !== null){ %>
                <p><%= locals.minWeather %></p>
              <% } %>
              <% if(locals.error !== null){ %>
                <p><%= locals.error %></p>
              <% } %>
          </div>
          <div class="slds-m-left_medium">
              <% if(locals.minDesc !== null){ %>
                <p><%= locals.minDesc %></p>
              <% } %>
              <% if(locals.error !== null){ %>
                <p><%= locals.error %></p>
              <% } %>
          </div>
          </div>
          <div class="slds-col slds-size_1-of-2 slds-theme_alt-inverse">
            <span>Chicago</span>
            <div class="slds-m-left_medium">
                <% if(locals.chiWeather !== null){ %>
                  <p><%= locals.chiWeather %></p>
                <% } %>
                <% if(locals.error !== null){ %>
                  <p><%= locals.error %></p>
                <% } %>
            </div>
            <div class="slds-m-left_medium">
                <% if(locals.chiDesc !== null){ %>
                  <p><%= locals.chiDesc %></p>
                <% } %>
                <% if(locals.error !== null){ %>
                  <p><%= locals.error %></p>
                <% } %>
            </div>
          </div>
            <div class="slds-col slds-size_1-of-2 slds-theme_inverse">
                <span>Dallas</span>
                <div class="slds-m-left_medium">
                    <% if(locals.dalWeather !== null){ %>
                      <p><%= locals.dalWeather %></p>
                    <% } %>
                    <% if(locals.error !== null){ %>
                      <p><%= locals.error %></p>
                    <% } %>
                </div>
                <div class="slds-m-left_medium">
                    <% if(locals.dalDesc !== null){ %>
                      <p><%= locals.dalDesc %></p>
                    <% } %>
                    <% if(locals.error !== null){ %>
                      <p><%= locals.error %></p>
                    <% } %>
                </div>
          </div>
  </div>
  </div>
  </body>
</html>